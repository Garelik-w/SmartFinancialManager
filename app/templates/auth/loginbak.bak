{% extends "base.html" %}
{% import "bootstrap/wtf.html" as wtf %}

{% block title %}智能金融管家 - 登录{% endblock %}

<!--==========================
导入外部样式表
============================-->
{% block css %}
{{ super() }}
<!-- 针对所有表单页面相关的，都需要这个CSS渲染 -->
<link href="{{ url_for('static', filename='css/login.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block page_content %}
<div class="main-w3l">
    <br/><br/><br/><br/>
    <div class="w3layouts-main">
        <h2>立即登录</h2>
        <form action=" {{ url_for('auth.login') }} " method="post">
            <input value="E-MAIL" name="email" type="email" required onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'E-Mail';}" />
            <input value="PASSWORD" name="password" type="password" required onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'password';}" />
            <span><input name="remember_me" type="checkbox" />记住我</span>
            <h6><a href="#">忘记密码?</a></h6>
            <div class="clear"></div>
            <input type="submit" value="登 录" name="login">
        </form>
        <p>还没有账号 ?<a href="#">立即注册</a></p>
    </div>
</div>
<!--//main-->
<!--footer-->
<div class="footer-w3l">
