{% extends "bootstrap/base.html" %}

{% block title %}智能金融管家{% endblock %}

{% block head %}
{{ super() }}
<!-- 元数据 -->
<meta charset="utf-8">
<meta content="width=device-width, initial-scale=1.0" name="viewport">
<meta content="智能金融管家(Smart Financial Manager)" name="keywords">
<meta content="智能金融管家(Smart Financial Manager)" name="description">
<!-- 页面标签图片 -->
<link href="{{ url_for('static', filename='favicon.ico') }}" rel="shortcut icon">

<!-- 插入CSS外部样式表 -->
{% block css -%}
<!-- 导航栏样式表+通用样式 -->
<link href="{{ url_for('static', filename='css/styles.css') }}" rel="stylesheet" type="text/css">
{%- endblock css %}

{% endblock %}

<!--==========================
页面内容
============================-->
{% block body %}
<!-- 插入初始页面 -->
{% block hero -%}
{%- endblock hero %}
<!-- 原内容 -->
{{ super() }}
<!-- 插入页面内容 -->
{% block page_content -%}
{%- endblock %}
{% endblock %}

<!--==========================
导航栏
============================-->
{% block navbar %}
<header id="header">
<div class="container">
    <!-- 导航栏图片标题 -->
    <div id="logo" class="pull-left">
    <a href="#hero"><img src="/static/img/logo.png" alt="" title="" /></img></a>
    </div>
    <!-- 导航栏 -->
    <nav id="nav-menu-container">
    <ul class="nav-menu">
        <li class="menu-active"><a href="{{ url_for('main.home') }}#hero">Home</a></li>
        <li><a href="{{ url_for('main.home') }}#talk">TALK</a></li>
        <li><a href="{{ url_for('main.home') }}#about">About Me</a></li>
        <li><a href="{{ url_for('main.home') }}#services">Services</a></li>
        <li><a href="{{ url_for('main.home') }}#register">Register</a></li>
        <li><a href="{{ url_for('main.home') }}#contact">Contact Us</a></li>
        <! -- 这里预留一个超级终端给开发者,普通用户看不到也点不到-->
         {% if current_user.is_authenticated %}
            <li><a href="{{ url_for('vipAdmin.vipuser', username=current_user.username) }}">管理员终端</a></li>
        {% else %}
            <li><a href="{{ url_for('main.home') }}#hero"></a></li>
        {% endif %}

        <! -- 判断用户是否登录 -->
        {% if current_user.is_authenticated %}
            <li class="menu-has-children user-active">
                <! -- 这里需要区分是普通用户还是大V用户-->
                <a href="{{ url_for('main.home') }}#hero">
                    {% if current_user.user_avatar %}
                        <img src="{{ current_user.user_avatar }}" width="18" height="18">
                    {% endif %}
                    私人智能管家
                </a>
                <ul>
                    <li><a href="{{ url_for('main.user', username=current_user.username) }}">用户中心</a></li>
                    <li><a href="{{ url_for('auth.change_password') }}">修改密码</a></li>
                    <li><a href="{{ url_for('auth.change_email_request') }}">修改邮箱地址</a></li>
                    <li><a href="{{ url_for('auth.logout') }}">登出</a></li>
                </ul>
            </li>
        {% else %}
            <li><a href="{{ url_for('auth.login') }}">登录</a></li>
        {% endif %}
    </ul>
    </nav>
</div>
</header>
{% endblock %}

<!--==========================
脚本相关库引入
============================-->
{% block scripts %}
{{ super() }}
<!-- 多级下拉菜单 -->
<script src="{{ url_for('static', filename='lib/superfish/hoverIntent.js') }}"></script>
<script src="{{ url_for('static', filename='lib/superfish/superfish.min.js') }}"></script>
<!-- 文字动态效果（文字切换入场） -->
<script src="{{ url_for('static', filename='lib/morphext/morphext.min.js') }}"></script>
<!-- 页面上下滑动效果 + 网站滚动固定浮动层（用以设定导航栏） -->
<script src="{{ url_for('static', filename='lib/wow/wow.min.js') }}"></script>
<script src="{{ url_for('static', filename='lib/stickyjs/sticky.js') }}"></script>
<!-- 自定义动画（设定不同元素的滑动频率） -->
<script src="{{ url_for('static', filename='lib/easing/easing.js') }}"></script>
<!-- flask-moment：本地时间格式化所需的相关库 -->
{{moment.include_moment(local_js=url_for('static',filename='js/moment-with-locales.min.js')) }}
<!-- 实现静态页面嵌入效果 -->
<!--{{ moment.include_jquery() }}-->
{% endblock %}
